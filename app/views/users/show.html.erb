<% title "User" %>

<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>
<p>
  <strong>Name:</strong>
  <%=h @user.name %>
</p>
<p>
  <strong>Password:</strong>
  <%=h @user.password %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
  <% if current_user.admin == true -%>
  	<%= link_to "View All", users_path %>
  <% end -%>
  
</p>
