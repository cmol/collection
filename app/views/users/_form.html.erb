<% semantic_form_for @user do |f| %>
  <%= f.error_messages %>
  <% f.inputs do -%>
		<%= f.input :name %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<% if current_user.admin == true -%>
			<%= f.input :active %>
			<%= f.input :admin %>
		<% end -%>
	<% end -%>
	<%= f.buttons %>
<% end %>
