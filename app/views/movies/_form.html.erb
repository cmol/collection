<div id="search_list">Nothing here yet</div>
<br />

<% semantic_form_for @movie do |f| %>
	<% f.inputs do -%>
		<%= f.input :title, :class => "movie_title" %>
		<%= link_to_remote( 'Search...', { 
   :url => { :action => :imdb_search},
   :with => "'id=' + $('#movie_title').val()",
   :title => "Search for this movie",
   :loading => "$('#search_list').effect(\"highlight\", {}, 9000), $('#search_list').html(\"Searching...\")" }
) %>
		<%= f.input :year %>
		<%= f.input :rating %>
		<%= f.input :duration %>
		<%= f.input :directed_by %>
		<%= f.input :cast %>
		<%= f.input :genre %>
		<%= f.input :plot %>
		<%= f.input :poster_url %>
		<%= f.input :imdb %>
		<%= f.input :media, :include_blank => false %>
		<%= f.input :loaned_to %>
		<%= f.input :wishlist %>
	<% end -%>
	<%= f.buttons %>
<% end %>
