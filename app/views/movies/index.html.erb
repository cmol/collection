<% title "Movies" %>

<table>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Duration</th>
    <th>Directed By</th>
    <th>Cast</th>
    <th>Genre</th>
    <th>Plot</th>
    <th>Poster Url</th>
    <th>Imdb</th>
    <th>User</th>
    <th>Media</th>
    <th>Loaned To</th>
  </tr>
  <% for movie in @movies %>
    <tr>
      <td><%=h movie.title %></td>
      <td><%=h movie.rating %></td>
      <td><%=h movie.duration %></td>
      <td><%=h movie.directed_by %></td>
      <td><%=h movie.cast %></td>
      <td><%=h movie.genre %></td>
      <td><%=h movie.plot %></td>
      <td><%=h movie.poster_url %></td>
      <td><%=h movie.imdb %></td>
      <td><%=h movie.user_id %></td>
      <td><%=h movie.media_id %></td>
      <td><%=h movie.loaned_to %></td>
      <td><%= link_to "Show", movie %></td>
      <td><%= link_to "Edit", edit_movie_path(movie) %></td>
      <td><%= link_to "Destroy", movie, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Movie", new_movie_path %></p>
