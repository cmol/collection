<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application', 'formtastic', 'formtastic_changes' %>
    <%= javascript_include_tag 'jquery', 'jquery-ui', 'jrails' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
    	<% if current_user -%>
	    	<div id="user_nav">
					<%= link_to "Movie List", root_url %> | <%= link_to "Wishlist", wishlist_url %> | <%= link_to "Logout", logout_url %> | <%= link_to current_user.name, edit_user_path(current_user.id) %>
				</div>
    	<% end -%>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
